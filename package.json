{
  "name": "ts-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --sourcemap=external",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "start": "bun dist/index.js",
    "lint": "bunx @biomejs/biome check src/",
    "lint:fix": "bunx @biomejs/biome check src/ --write",
    "format": "bunx @biomejs/biome format src/ --write",
    "type-check": "tsc --noEmit",
    "check": "bun run lint && bun run type-check"
  },
  "dependencies": {
    "@loglayer/transport-pino": "^2.2.4",
    "loglayer": "^6.7.2",
    "path-to-regexp": "^8.3.0",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "serialize-error": "^12.0.0",
    "tsyringe": "^4.10.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "22",
    "lefthook": "^1.13.6",
    "typescript": "^5.9.3"
  }
}
