{
  "name": "ts-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "bun dist/index.js",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --write",
    "format": "biome format src/ --write",
    "type-check": "tsc --noEmit",
    "check": "bun run lint && bun run type-check"
  },
  "dependencies": {
    "@loglayer/transport-pino": "^2.2.3",
    "loglayer": "^6.7.2",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "serialize-error": "^12.0.0",
    "tsyringe": "^4.10.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^24.6.2",
    "lefthook": "^1.13.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
